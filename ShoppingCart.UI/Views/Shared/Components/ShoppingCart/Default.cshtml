@model Cart

@{
    Layout = null;

    var totalPrice = 0M;

    foreach (var product in Model.Products)
    {
        totalPrice += product.Quantity * product.Price;
    }
}

<div class="dropdown">
    <div class="dropdown-toggle" data-toggle="dropdown" id="ShoppingCartDropDown">
        <span class="text-muted">Shopping Cart</span>
        <span class="badge badge-primary badge-pill">@Model.Products.Count</span>
    </div>
    <div class="dropdown-menu" aria-labelledby="ShoppingCartDropDown">

        @if (Model.Products.Count > 0)
        {
            @foreach (var product in Model.Products)
            {
                <div class="dropdown-item d-flex justify-content-between">
                    <div>
                        <h6 class="my-0">@product.Name</h6>
                        <small class="text-muted">Qty.: @product.Quantity</small>
                    </div>
                    <div class="w-50">&nbsp;</div>
                    <span class="text-muted justify-content-end">$@product.Price</span>
                </div>
                <div class="dropdown-divider"></div>
            }
            <div class="dropdown-item d-flex justify-content-between bg-light">
                <div class="text-success">
                    <h6 class="my-0">Promo code</h6>
                    <small>EXAMPLECODE</small>
                </div>
                <span class="text-success">-$0</span>
            </div>
            <div class="dropdown-divider"></div>
            <div class="dropdown-item d-flex justify-content-between">
                <span>Total (USD)</span>
                <strong>$@totalPrice</strong>
            </div>
        }
        else
        {
            <div class="dropdown-item d-flex justify-content-between">
                <div>
                    <h6 class="my-0">No Items</h6>
                    <small class="text-muted">There are no items in your cart.</small>
                </div>
            </div>
        }
    </div>
</div>